rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
      
      // Payment Methods subcollection
      match /payment_methods/{methodId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Accounts collection - SIMPLIFIED FOR DEBUGGING
    match /accounts/{accountId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated();  // ✅ PERMISSIVE - Allow any authenticated user to update
      allow delete: if false;
    }

    // Transactions collection - SIMPLIFIED FOR DEBUGGING
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();  // ✅ PERMISSIVE - Allow any authenticated user to create
      allow update: if false;
      allow delete: if false;
    }

    // Notifications collection - SIMPLIFIED FOR DEBUGGING
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();  // ✅ PERMISSIVE - Allow any authenticated user to create
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Cards collection
    match /cards/{cardId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Bill Payments collection
    match /bill_payments/{billId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Savings Goals collection
    match /savings_goals/{goalId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
  }
}
