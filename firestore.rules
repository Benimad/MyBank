rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
      
      // Payment Methods subcollection (for Add Money feature)
      match /payment_methods/{methodId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Accounts collection - SIMPLIFIED FOR TRANSACTIONS
    match /accounts/{accountId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      // IMPORTANT: Allow updates for authenticated users (transactions need this)
      allow update: if isAuthenticated() 
        && request.resource.data.balance is number
        && request.resource.data.balance >= 0;
      allow delete: if false;
    }

    // Transactions collection - SIMPLIFIED
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.amount is number
        && request.resource.data.amount >= 0;
      allow update: if false; // transactions immutable
      allow delete: if false;
    }

    // Notifications collection - SIMPLIFIED
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Cards collection
    match /cards/{cardId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated();
      allow delete: if false;
    }

    // Bill Payments collection
    match /bill_payments/{billId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated();
      allow delete: if false;
    }

    // Savings Goals collection
    match /savings_goals/{goalId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated();
      allow delete: if false;
    }
  }
}
